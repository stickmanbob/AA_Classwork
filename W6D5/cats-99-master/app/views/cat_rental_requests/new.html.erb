<h1>New Request</h1>

<form action="<%= cat_rental_requests_url %>" method="post">
  <select name="request[cat_id]">
    <% Cat.all.each do |cat| %>
      <option value="<%= cat.id %>"> <%= cat.name %> </option>
    <% end %>
  </select>

  <label>
    Start Date
    <input type="date" name="request[start_date]">
  </label>

  <label>
    End Date
    <input type="date" name="request[end_date]">
  </label>

  <input type="submit">
</form>