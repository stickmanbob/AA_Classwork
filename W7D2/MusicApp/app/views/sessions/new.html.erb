<h1>Login</h1>

<form action="<%=sessions_url%>" method="POST">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <label >
        Email
        <input type="text", name="user[email]">
    </label>
    <br>
    <br>
    <label for="">
        Password
        <input type="text" name="user[password]" >
    </label>
    <input type="submit">

</form>
<% if flash[:errors]%>
    <%flash[:errors].each do |error|%>
    <h2><%=error%></h2>
    <%end%>
<%end%>

